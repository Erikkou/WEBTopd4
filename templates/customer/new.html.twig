{# templates/customer/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Add New Customer{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h4>Add a New Customer</h4>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group">
            {{ form_label(form.name, 'Customer Name', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            {{ form_errors(form.name) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
